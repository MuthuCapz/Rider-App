<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/llorange"
    tools:context=".DriverDetails">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Rider Details"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/nunito"
        android:layout_marginTop="40dp"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:orientation="vertical">
        <TextView
            android:id="@+id/RiderNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RiderName"
            android:fontFamily="@font/nunito"
            android:textSize="18sp"
            android:textColor="@color/navy"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:hint="Enter Your Name"
            android:fontFamily="@font/nunito"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColorHint="@color/grey"
            android:layout_marginEnd="20dp" />
        <TextView
            android:id="@+id/RiderMailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/nunito"
            android:textSize="18sp"
            android:textColor="@color/navy"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent" />
        <EditText
            android:id="@+id/eMail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="@color/grey"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:hint="Enter Email"
            android:fontFamily="@font/nunito"
            android:layout_marginEnd="20dp"
             />
        <TextView
            android:id="@+id/RidermobileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:fontFamily="@font/nunito"
            android:textSize="18sp"
            android:textColor="@color/navy"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:hint="Enter Mobile Number"
            android:fontFamily="@font/nunito"
            android:layout_marginTop="5dp"
            android:maxLength="10"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:textColorHint="@color/grey"
            android:inputType="number"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/RiderLicenseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload License"
            android:fontFamily="@font/nunito"
            android:textSize="18sp"
            android:textColor="@color/navy"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/selectImage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bluebutton"
            android:fontFamily="@font/nunito"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:textColorHint="@color/grey"
            android:layout_marginEnd="20dp"
            android:paddingLeft="15dp"
            android:textSize="16sp"
            android:paddingRight="15dp"
            android:hint="Upload License"
            android:textColor="@color/black"
            app:drawableEndCompat="@drawable/add" />
        <ImageView
            android:id="@+id/selectedImageView"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/doc"
            android:contentDescription="image_description" />

        <Button
            android:id="@+id/submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/navy"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:layout_marginTop="25dp"
            android:text="Submit"
            android:textSize="18dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>